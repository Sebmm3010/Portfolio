---
import Section from "../Section.astro";
import Mail from "@/icons/Mail.astro";
import GitHub from "@/icons/GitHub.astro";
import Webpage from "@/icons/webpage.astro";
import LinkedIn from "@/icons/LinkedIn.astro";
import Phone from "@/icons/Phone.astro";
import WorldMap from "@/icons/WorldMap.astro";
import { basics } from "@cv-ge";
const { name, image, url, location, phone, email, profiles } = basics;
const { region, city } = location;
import { informacion_personal } from "@cv-es";
const { label } = informacion_personal;

const SOCIAL_ICONS: Record<string, any> = {
  GitHub,
  LinkedIn,
};

const linkedinUrl = profiles
  .find(({ network }) => network === "LinkedIn")
  ?.url.split("w.")[1];
---

<Section>
  <div class="container">
    <div class="info">
      <h1>{name}</h1>
      <h2 class="label">{label}</h2>
      <span>
        <WorldMap />
        {city}, {region}
      </span>
      <footer class="print print-info">
        -Mail: {email}
        <br /> -Tel: {phone}
        <br /> -Website: {url}
        <br />-Linkedin: {linkedinUrl}
      </footer>
      <footer class="no-print">
        {
          email && (
            <a
              href={`mailto:${email}`}
              title={`Enviar email a ${name} al correo ${email}`}
              target="_blank"
              rel="noopener noreferrer"
            >
              <Mail title={`Enviar email a ${name} al correo ${email}`} />
            </a>
          )
        }
        {
          phone && (
            <a
              href={`tel:${phone}`}
              title={`Llamar a ${name} al telefono ${email}`}
              target="_blank"
              rel="noopener noreferrer"
            >
              <Phone title={`Llamar a ${name} al telefono ${email}`} />
            </a>
          )
        }
        {
          (
            <a
              href={url}
              title="Ir a pagina web"
              target="_blank"
              rel="noopener noreferrer"
            >
              <Webpage title="Ir a pagina web" />
            </a>
          )
        }
        {
          profiles.map(({ network, url, username }) => {
            const Icon = SOCIAL_ICONS[network];
            return (
              <a
                href={url}
                title={`Visitar a ${username} en ${network}`}
                target="_blank"
                rel="noopener noreferrer"
              >
                <Icon />
              </a>
            );
          })
        }
      </footer>
    </div>
    <figure>
      <img src={image} alt={name} />
    </figure>
  </div>
</Section>

<style>
  .container {
    display: flex;
    justify-content: space-between;
    align-items: center;
    gap: 1rem;
  }

  .info {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
    padding-right: 32px;
  }

  h1 {
    font-size: 2rem;
  }

  .label {
    font-family: Menlo, Monaco, "Lucida console", "Courier New", Courier,
      monospace;
    color: #666;
    font-weight: 600;
    font-size: 1.1rem;
    text-wrap: balance;
  }

  .print-info {
    color: #666;
  }

  span {
    color: #666;
    display: flex;
    align-items: center;
    gap: 0.25rem;
    font-size: 0.85rem;
    letter-spacing: -0.05rem;
  }

  footer {
    font-size: 0.8rem;
    display: flex;
    gap: 4px;
    margin-top: 8px;
  }

  footer a {
    color: #777;
    display: inline-flex;
    justify-content: center;
    align-items: center;
    border: 1px solid #eee;
    border-radius: 6px;
    padding: 4px;
    width: 32px;
    height: 32px;
    transition: all 0.3s ease;
  }

  footer a:hover {
    background: #eee;
    border: 1px solid #ddd;
  }

  img {
    aspect-ratio: 1/1;
    object-fit: cover;
    width: 130px;
    border-radius: 16px;
  }
</style>
