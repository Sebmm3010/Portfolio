---
import Section from "../Section.astro";
import { work } from "@cv-es";
---

<Section title="Experiencia">
  <ul>
    {
      work.map(({ name, startDate, endDate, position, summary, url }) => {
        const startYear = `${new Date(startDate).getFullYear()}/${
          new Date(startDate).getMonth() < 9
            ? "0" + (new Date(startDate).getMonth() + 1)
            : new Date(startDate).getMonth() + 1
        }`;
        const endYear = endDate
          ? `${new Date(endDate).getFullYear()}/${
              new Date(endDate).getMonth() < 9
                ? "0" + (new Date(endDate).getMonth() + 1)
                : new Date(endDate).getMonth() + 1
            }`
          : "Actualidad";

        const period = `${startYear} - ${endYear}`;
        return (
          <li>
            <article>
              <header>
                <div>
                  {url ? (
                    <a href={url} target="_blank" rel="noopener noreferrer">
                      <h3>{name}</h3>
                    </a>
                  ) : (
                    <h3>{name}</h3>
                  )}
                  <h4>{position}</h4>
                </div>

                <time>{period}</time>
              </header>

              <footer>
                <p>{summary}</p>
              </footer>
            </article>
          </li>
        );
      })
    }
  </ul>
</Section>

<style>
  ul {
    display: flex;
    flex-direction: column;
    gap: 32px;
  }

  article h3 {
    font-weight: 500;
    color: #111;
  }

  article h4 {
    color: #222;
    font-weight: 400;
  }

  header {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    margin-bottom: 4px;
  }

  time {
    color: #555;
    font-size: 0.85rem;
  }
</style>
